{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/login$", "dest": "/login.html" },
    { "src": "^/signup$", "dest": "/signup.html" },
    { "src": "^/forgot$", "dest": "/forgot.html" },
    { "src": "^/hooks$", "dest": "/hooks.html" },
    { "src": "^/ctas$", "dest": "/cta.html" },
    { "src": "^/history$", "dest": "/history.html" },
    { "src": "^/assets/(.*)$", "dest": "/assets/$1" },
    { "src": "^/api/(.*)$", "dest": "/api/$1.js" }
  ]
}
